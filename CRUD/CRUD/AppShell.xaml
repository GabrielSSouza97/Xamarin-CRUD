<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CRUD.Views"
       Title="CRUD"
       x:Class="CRUD.AppShell">

    <!-- Display a bottom tab bar containing two tabs -->
    <TabBar>
        <ShellContent Title="Employees"
                      Icon="icon_feed.png"
                      ContentTemplate="{DataTemplate views:EmployeesList}" />
        <ShellContent Title="Enterprises"
                      Icon="icon_about.png"
                      ContentTemplate="{DataTemplate views:EnterprisesList}" />
    </TabBar>


</Shell>
